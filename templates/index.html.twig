{% extends "base.html.twig" %}

{% block content %}
    <div class="card mb-3 mt-1">
        <div class="card-header">
            Scarping
        </div>
        <div class="card-body">
          <form class="row g-3">
                <div class="col-auto">
                    <label for="registration" class="visually-hidden">Registration Codes</label>
                    <input type="text" class="form-control" id="registration" placeholder="Enter registration codes">
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary mb-3">Submit</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            Company List
        </div>
    <div class="card-body">
        <table class="table table-bordered">
        <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Registraion</th>
            <th>VAT</th>
            <th>Address</th>
            <th>Mobile/Phone</th>
            <th class="text-center">Actions</th>
        </tr>
        </thead>
        <tbody>
            {% for key, company in pagination %}
                <tr>
                    <td>{{ company.id }}</td>
                    <td>{{ company.name }}</td>
                    <td>{{ company.registrationCode }}</td>
                    <td>{{ company.vatNo }}</td>
                    <td>{{ company.address }}</td>
                    <td>{{ company.phone }}</td>
                    <td class="text-center"> <a href="{{ path('companies.edit', {'id': company.id } ) }}" class="btn btn-sm btn-secondary"></i> Edit</a>
                </tr>
            {% endfor %}
        </tbody>
       
    </table>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
    </div>
    </div>

{% endblock %}